<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9sp"
    android:background="@drawable/rect"
    android:elevation="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="188dp">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_image" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90000000"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="22dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/profile" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp">
                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="@color/white"
                        android:lineSpacingExtra="2.3sp"
                        android:text="Christina Meyers"
                        />
                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:textColor="#94aab5"
                        android:lineSpacingExtra="2sp"
                        android:text="\ufeff@christna_mey"
                        />


                </LinearLayout>
            </LinearLayout>
    </FrameLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.3dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <customfonts.MyTextView_Roboto_Medium
                android:id="@+id/title"
                android:layout_width="348dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="4.7sp"
                android:text="Vettel is Ferrari Number One Hamilton"
                android:textColor="#101e21"
                android:textSize="14.7sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/head_line"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16.7dp"
                    android:lineSpacingExtra="5sp"
                    android:paddingRight="18dp"
                    android:paddingLeft="18dp"
                    android:text="Lorem Ipsum is simply dummy text of the printing
and typesetting industry."
                    android:textColor="@color/blackTextColor"
                    android:textSize="13.3sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_gravity="right|center"

                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_vote" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2sp"
                    android:text="1 hour ago ."
                    android:textColor="#797979"

                    android:textSize="11.7sp"
                    android:textStyle="normal" />

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/total_voting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2sp"
                    android:textColor="#797979"
                    android:textSize="11.7sp"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_marginLeft="15dp">

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/won_precentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2sp"
            android:text="50%"
            android:textColor="@color/black_txt_color"

            android:textSize="13.7sp"
            android:textStyle="normal" />

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/won_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif"
            android:text="Hello"
            android:lineSpacingExtra="2sp"
            android:textColor="@color/black_txt_color"

            android:textSize="15.7sp"
            android:textStyle="normal" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false" />

</LinearLayout>