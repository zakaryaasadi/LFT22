<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="11dp"
    app:cardCornerRadius="2dp"
    android:elevation="1dp"
    android:layout_marginRight="8.5dp"
    android:layout_marginLeft="8.5dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="9.3dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="52.3dp"
                android:layout_height="52.3dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:id="@+id/person_name"
                        android:textColor="@color/blackTextColor"
                        android:text="Christina Meyers"/>
                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:id="@+id/user_name"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/gretTxtColor"
                        android:text="@string/gmail"/>
                </LinearLayout>
                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:id="@+id/date"
                    android:layout_marginTop="5.7dp"
                    android:textColor="@color/gretTxtColor"
                    android:text="Fri, 12 May 2017 . 14.30"/>

            </LinearLayout>
        </LinearLayout>
        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13.3sp"
            android:paddingLeft="18dp"
            android:id="@+id/note"
            android:lineSpacingExtra="5sp"
            android:layout_marginTop="16.7dp"
            android:textColor="@color/blackTextColor"
            android:text="Lorem Ipsum is simply dummy text of the printing
and typesetting industry."/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#30979797"
            android:layout_marginTop="23.8dp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>